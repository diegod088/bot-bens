# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================

# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_TOKEN=your_bot_token_here

# API Credentials from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Encryption key for user sessions (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_encryption_key_here

# Optional: Session string for admin Telegram account
TELEGRAM_SESSION_STRING=

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Your Telegram User ID (get from @userinfobot)
ADMIN_ID=your_user_id_here

# ===========================================
# DASHBOARD CONFIGURATION
# ===========================================

# Admin password for dashboard login
ADMIN_TOKEN=your_secure_admin_password

# Secret key for Flask sessions (generate random string)
DASHBOARD_SECRET_KEY=your-random-secret-key-here

# ===========================================
# PAYMENT CONFIGURATION (Optional)
# ===========================================

# PayPal Credentials (optional, for PayPal payments)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Backend URL (optional)
BACKEND_URL=http://localhost:8000

# ===========================================
# RAILWAY/DEPLOYMENT SETTINGS
# ===========================================
# These are set automatically by Railway, don't change
# PORT=5000
# HOST=0.0.0.0
